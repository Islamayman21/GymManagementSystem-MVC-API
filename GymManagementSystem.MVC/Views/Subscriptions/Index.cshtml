@model IEnumerable<GymMs.DAL.GymMs.DAL.Entities.Subscription>

@{
    ViewData["Title"] = "Subscriptions";
}

<h2>Subscriptions</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Subscription</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Member</th>
            <th>Type</th>
            <th>Start</th>
            <th>End</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sub in Model)
        {
            <tr>
                <td>@sub.Member?.FullName</td>
                <td>@sub.Type</td>
                <td>@sub.StartDate.ToShortDateString()</td>
                <td>@sub.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@sub.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@sub.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
