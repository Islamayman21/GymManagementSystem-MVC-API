@model GymMs.DAL.GymMs.DAL.Entities.Payment

@{
    ViewData["Title"] = "Payment Details";
}

<h2>Payment Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Member</dt>
        <dd class="col-sm-10">@Model.Subscription?.Member?.FullName</dd>

        <dt class="col-sm-2">Subscription</dt>
        <dd class="col-sm-10">@Model.SubscriptionId</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Payment Date</dt>
        <dd class="col-sm-10">@Model.PaymentDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Method</dt>
        <dd class="col-sm-10">@Model.Method</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
