@model IEnumerable<GymMs.DAL.GymMs.DAL.Entities.GymClass>

<h2>Classes List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Class</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Title)</th>
            <th>@Html.DisplayNameFor(m => m.Capacity)</th>
            <th>Trainer</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var cls in Model)
        {
            <tr>
                <td>@cls.Title</td>
                <td>@cls.Capacity</td>
                <td>@cls.Trainer?.FullName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cls.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@cls.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@cls.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
