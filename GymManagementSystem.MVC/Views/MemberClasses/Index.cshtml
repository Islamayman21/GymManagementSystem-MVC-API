@model IEnumerable<GymMs.DAL.GymMs.DAL.Entities.MemberClass>

@{
    ViewData["Title"] = "Member Classes";
}

<h2>Member Classes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Assign Member to Class</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Member</th>
            <th>Class</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Member?.FullName</td>
                <td>@item.GymClass?.Title</td>
                <td>
                    <a asp-action="Details" asp-route-memberId="@item.MemberId" asp-route-gymClassId="@item.GymClassId" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Edit" asp-route-memberId="@item.MemberId" asp-route-gymClassId="@item.GymClassId" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-memberId="@item.MemberId" asp-route-gymClassId="@item.GymClassId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
