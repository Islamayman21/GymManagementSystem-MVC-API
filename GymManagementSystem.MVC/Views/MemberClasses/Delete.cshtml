@model GymMs.DAL.GymMs.DAL.Entities.MemberClass


@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Assignment</h2>

<h4>Are you sure you want to remove this member from class?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Member</dt>
        <dd class="col-sm-10">@Model.Member?.FullName</dd>

        <dt class="col-sm-2">Class</dt>
        <dd class="col-sm-10">@Model.GymClass?.Title</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="MemberId" />
    <input type="hidden" asp-for="GymClassId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
