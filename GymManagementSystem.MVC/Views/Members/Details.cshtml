@model GymMs.DAL.GymMs.DAL.Entities.Member

<h2>Member Details</h2>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Join Date</dt>
        <dd class="col-sm-10">@Model.JoinDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Subscription End</dt>
        <dd class="col-sm-10">@Model.SubscriptionEnd.ToShortDateString()</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
