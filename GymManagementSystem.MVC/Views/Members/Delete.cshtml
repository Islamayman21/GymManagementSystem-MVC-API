@model GymMs.DAL.GymMs.DAL.Entities.Member

<h2>Delete Member</h2>

<h4>Are you sure you want to delete this member?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Subscription End</dt>
    <dd class="col-sm-10">@Model.SubscriptionEnd.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
